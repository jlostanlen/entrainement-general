<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
    <grid title="Product" name="product-grid" model="com.axelor.sale.db.Product">
        <field name="code"/>
        <field name="name"/>
        <field name="description"/>
        <field name="price"/>
        <field name="tax"/>
    </grid>
    <form title="Product" name="product-form" model="com.axelor.sale.db.Product">
        <panel name="mainPanel" colSpan="12">
            <field name="name" colSpan="12"/>
            <field name="code" colSpan="3"/>
            <field name="description" colSpan="9"/>
            <field name="price"/>
            <field name="tax" canNew="true"/>
        </panel>
    </form>
</object-views>
